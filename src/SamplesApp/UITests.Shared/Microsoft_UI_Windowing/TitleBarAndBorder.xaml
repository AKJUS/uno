<Page
    x:Class="UITests.Microsoft_UI_Windowing.TitleBarAndBorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="12">
        <StackPanel Spacing="8">
            <TextBlock Text="Manual sample demonstrating SetBorderAndTitleBar and ExtendsContentIntoTitleBar APIs" TextWrapping="Wrap"/>

            <StackPanel Spacing="4">
                <TextBlock Text="ExtendsContentIntoTitleBar" FontWeight="Bold" />
                <CheckBox x:Name="WindowExtends" Content="Window.ExtendsContentIntoTitleBar" IsChecked="{Binding WindowExtends, Mode=TwoWay}"/>
                <CheckBox x:Name="AppWindowExtends" Content="AppWindow.TitleBar.ExtendsContentIntoTitleBar" IsChecked="{Binding AppWindowExtends, Mode=TwoWay}"/>
                <TextBlock Text="Note: Effects depend on platform support." TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="SetBorderAndTitleBar (OverlappedPresenter)" FontWeight="Bold" />
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <CheckBox x:Name="HasBorderCheck" Content="Has border" IsChecked="{Binding HasBorder, Mode=TwoWay}"/>
                    <CheckBox x:Name="HasTitleBarCheck" Content="Has title bar" IsChecked="{Binding HasTitleBar, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Content="Apply SetBorderAndTitleBar" Command="{Binding ApplyCommand}" />
                    <Button Content="Reset presenter" Command="{Binding ResetCommand}" />
                </StackPanel>
                <TextBlock x:Name="PresenterNameText" Text="{Binding PresenterDescription}"/>
                <TextBlock Foreground="Red" Text="{Binding LastError}" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
